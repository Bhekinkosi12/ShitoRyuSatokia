@{
}
@model ShitoRyuSatokia.Models.AdminViewModel

<div id="contact" class="contact-us section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 wow fadeInUp" data-wow-duration="0.5s" data-wow-delay="0.25s">
                <form id="contact" action="" method="post">
                    <div class="row">
                        <div class="col-lg-6 offset-lg-3">
                            <div class="section-heading">
                                <h6>Edit Form</h6>
                                
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="row">


                                <div class="col-lg-6">
                                    <fieldset>
                                        <input type="name" name="name" value="@Model.SelectedDojo.Dojo_Name" id="name" placeholder="Dojo Name" autocomplete="on" required>
                                    </fieldset>
                                </div>

                                <div class="col-lg-6">

                                    <fieldset>
                                        <input type="text" name="Dname" placeholder="Instructor Surname" autocomplete="on" required>
                                    </fieldset>
                                </div>



                                <div class="col-lg-6">
                                    <fieldset>
                                        <input type="name" name="name" id="name" value="@Model.SelectedDojo.Dojo_Instructor" placeholder="Head Instructor Name" autocomplete="on" required>
                                    </fieldset>
                                </div>
                                <div class="col-lg-6">
                                    <fieldset>
                                        <input type="name" name="name" value="@Model.SelectedDojo.Dojo_Instructor_Email" id="name" placeholder="Head Instructor Email" autocomplete="on" required>
                                    </fieldset>
                                </div>



                                <div class="col-lg-6">
                                    <fieldset>
                                        <input type="name" name="name" value="@Model.SelectedDojo.Dojo_Instructor_Position" id="name" placeholder="Head Instructor Position" autocomplete="on" required>
                                    </fieldset>
                                </div>


                                <div class="col-lg-6">
                                    <fieldset>
                                        <input type="name" name="name" value="@Model.SelectedDojo.Dojo_Instructor_Number" id="name" placeholder="Head Instructor Number" autocomplete="on" required>
                                    </fieldset>
                                </div>


                                <div class="col-lg-12">
                                    <fieldset>
                                        <input type="surname" name="surname" value="@Model.SelectedDojo.location" id="surname" placeholder="Dojo Location" autocomplete="on" required>
                                    </fieldset>
                                </div>


                                
                                <div class="col-lg-12">
                                    <div class="section-heading" style="margin: 0;">
                                        <p>Instructors Short Description</p>

                                    </div>
                                    <fieldset>
                                        <textarea name="message" type="text" class="form-control" id="message" placeholder="Instructors Short description" required="">@Model.SelectedDojo.Dojo_Instructor_Description</textarea>
                                    </fieldset>
                                </div>
                                <div class="col-lg-12">
                                    <div class="section-heading" style="margin: 0;">
                                        <p>Dojo Description</p>

                                    </div>
                                    <fieldset>
                                        <textarea name="message" type="text" class="form-control" id="message" placeholder="Dojo description" required="">@Model.SelectedDojo.Dojo_Description</textarea>
                                    </fieldset>
                                </div>

                                <div class="col-lg-12">

                                    <div class="section-heading" style="margin: 0;">
                                        <p>Dojo Rules and Regulation</p>

                                    </div>

                                    <fieldset>
                                        <textarea name="message" type="text" class="form-control" id="message" placeholder="Dojo rules and regulation" required="">@Model.SelectedDojo.Regulation</textarea>
                                    </fieldset>
                                </div>
                                <div class="col-lg-12">

                                    <div class="section-heading" style="margin: 0;">
                                        <p>Dojo Traning Schedule</p>

                                    </div>

                                    <fieldset>
                                        <textarea name="Dtime" type="text" class="form-control" id="message" placeholder="Dojo Schedule" required="">@Model.SelectedDojo.Dojo_Time</textarea>
                                    </fieldset>
                                </div>
                                <div class="col-lg-12">
                                    <fieldset>
                                        <button type="submit" id="form-submit" class="main-button ">Save Form</button>
                                    </fieldset>
                                </div>
                            </div>
                        </div>
                    
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>