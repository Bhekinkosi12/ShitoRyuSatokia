@model ShitoRyuSatokia.Models.MicroModel.News

<div id="contact" class="contact-us section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 wow fadeInUp" data-wow-duration="0.5s" data-wow-delay="0.25s">
                <form id="contact" asp-controller="Edit" asp-action="UpdateNews" method="post">
                    <div class="row">
                        <div class="col-lg-6 offset-lg-3">
                            <div class="section-heading">
                                <h6>Edit Form</h6>

                            </div>
                        </div>
                        <input asp-for="IsNew" value="@Model.IsNew" hidden />
                        <input asp-for="Id" value="@Model.Id" hidden />
                        <input hidden asp-for="Cover_Image" value="@Model.Cover_Image" class="imgInput" />
                        <div class="col-lg-6 offset-lg-3" style="margin-bottom: 60px;">
                            <div class="container_">
                                <div class="wrapper_">
                                    <div class="image">
                                        <img src="@Model.Cover_Image" alt="">
                                    </div>
                                    <div class="content">
                                        <div class="icon">
                                            <i class="fas fa-cloud-upload-alt"></i>
                                        </div>
                                        <div class="text">

                                        </div>
                                    </div>
                                    <div id="cancel-btn">
                                        <i class="fas fa-times"></i>
                                    </div>
                                    <div class="file-name">
                                        File name
                                    </div>
                                </div>
                                <button type="button" onclick="defaultBtnActive()" id="custom-btn">Choose a Image</button>
                                <input asp-for="Image" id="default-btn" type="file" hidden>

                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="row">


                                <div class="col-lg-12">
                                    <fieldset>
                                        <input type="text" asp-for="heading" value="@Model.heading" id="name" placeholder="Header" autocomplete="on" required>
                                    </fieldset>
                                </div>

                                <div class="col-lg-12">
                                    <fieldset>
                                        <input type="date" asp-for="Date" id="name" autocomplete="on" required>
                                    </fieldset>
                                </div>

                                <div class="col-lg-12">

                                    <fieldset>
                                        <textarea type="text" asp-for="Brief" class="form-control" id="message" placeholder="News description">@Model.Brief</textarea>
                                    </fieldset>
                                </div>



                                <div class="col-lg-12">
                                    <fieldset>
                                        <textarea asp-for="Description" type="text" class="form-control" id="message" placeholder="News description">@Model.Description</textarea>
                                    </fieldset>
                                </div>









                                <div class="col-lg-12">
                                    <fieldset>
                                        <button type="submit" id="form-submit" class="main-button ">Save Form</button>
                                    </fieldset>
                                </div>




                            </div>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



